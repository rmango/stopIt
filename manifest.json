{
    "name": "stopIt",
    "version": "1.0",
    "description": "Blocks websites that you blacklist, and then suggests other things to do.",
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "controlPage.html"
    },
    "manifest_version": 2
}