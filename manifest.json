{
    "name": "stopIt",
    "version": "1.0",
    "description": "Blocks websites that you blacklist, and then suggests other things to do.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "siteData.json",
            "background.js",
            "content.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_popup": "controlPage.html"
    },
    "web_accessible_resources": [
        "siteData.json"
    ],
    "manifest_version": 2
}